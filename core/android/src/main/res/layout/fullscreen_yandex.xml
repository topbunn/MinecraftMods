<?xml version="1.0" encoding="utf-8"?>
<com.yandex.mobile.ads.nativeads.NativeAdView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ad_yandex_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0F1115">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.yandex.mobile.ads.nativeads.MediaView
            android:id="@+id/ad_yandex_media"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/ad_yandex_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/ad_yandex_sponsored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="24dp"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            android:background="@drawable/bg_ad_badge"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp"
            app:layout_constraintTop_toTopOf="@id/ad_yandex_media"
            app:layout_constraintStart_toStartOf="@id/ad_yandex_media"
            tools:text="Sponsored" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ad_yandex_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="16dp"
            app:layout_constraintBottom_toTopOf="@+id/ad_yandex_cta"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:id="@+id/ad_yandex_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/ad_yandex_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:layout_marginEnd="12dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/ad_yandex_feedback"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/ad_yandex_icon"
                app:layout_constraintTop_toTopOf="@id/ad_yandex_icon"
                tools:text="Ad title" />


            <ImageView
                android:id="@+id/ad_yandex_feedback"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="Feedback"
                android:src="@drawable/ic_feedback"
                app:layout_constraintBottom_toBottomOf="@+id/ad_yandex_title"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/ad_yandex_title"
                app:layout_constraintTop_toTopOf="@+id/ad_yandex_title" />

            <TextView
                android:id="@+id/ad_yandex_body"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textSize="14sp"
                android:textColor="#B0B3B8"
                app:layout_constraintTop_toBottomOf="@id/ad_yandex_icon"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="Ad description text goes here" />

            <TextView
                android:id="@+id/ad_yandex_domain"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:textColor="#8A8D93"
                android:textSize="12sp"
                app:layout_constraintEnd_toStartOf="@+id/ad_yandex_price"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ad_yandex_body"
                tools:text="example.com" />

            <TextView
                android:id="@+id/ad_yandex_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/ad_yandex_domain"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/ad_yandex_domain"
                tools:text="$4.99" />

            <TextView
                android:id="@+id/ad_yandex_warning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:textColor="#8A8D93"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/ad_yandex_domain"
                app:layout_constraintTop_toBottomOf="@+id/ad_yandex_domain"
                tools:text="Warning" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/ad_yandex_cta"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_margin="16dp"
            android:gravity="center"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:background="@drawable/bg_cta"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Install" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.yandex.mobile.ads.nativeads.NativeAdView>

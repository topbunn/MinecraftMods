<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:id="@+id/applovin_native_ad_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_native_card_black"
    android:padding="12dp">

    <!-- Media Container -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cv_media"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardCornerRadius="16dp"
        app:cardElevation="0dp"
        app:layout_constraintDimensionRatio="1.7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <FrameLayout
            android:id="@+id/applovin_media"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <!-- Ad Badge -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|start"
            android:layout_margin="8dp"
            android:background="@drawable/bg_ad_badge"
            android:elevation="4dp"
            android:fontFamily="@font/inter_bold"
            android:paddingHorizontal="6dp"
            android:paddingVertical="2dp"
            android:text="Ad"
            android:textColor="#FFFFFF"
            android:textSize="12sp" />

        <!-- Feedback Icon Overlay -->
        <ImageView
            android:id="@+id/applovin_feedback"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="top|end"
            android:layout_margin="8dp"
            android:contentDescription="Feedback"
            android:elevation="4dp"
            android:src="@drawable/ic_feedback" />

    </androidx.cardview.widget.CardView>

    <!-- Title -->
    <TextView
        android:id="@+id/applovin_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="8dp"
        android:ellipsize="end"
        android:fontFamily="@font/inter_bold"
        android:maxLines="1"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/applovin_call_to_action"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cv_media"
        tool:text="Mod Title" />

    <!-- CTA / Action -->
    <Button
        android:id="@+id/applovin_call_to_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_cta"
        android:fontFamily="@font/inter_bold"
        android:paddingHorizontal="12dp"
        android:paddingVertical="6dp"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:text="OPEN"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/applovin_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/applovin_title"
        tool:text="OPEN" />

    <!-- Description -->
    <TextView
        android:id="@+id/applovin_body"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:fontFamily="@font/inter_medium"
        android:maxLines="3"
        android:textColor="#D4D3D3"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/applovin_title"
        tool:text="Description text..." />

    <!-- Extra fields (Advertiser, Icon) -->
    <TextView
        android:id="@+id/applovin_advertiser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/inter_regular"
        android:textColor="#8E8E93"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/applovin_body"
        tool:text="example.com" />
    
    <!-- Required invisible/small views -->
    <LinearLayout
        android:id="@+id/applovin_options"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:orientation="horizontal"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/applovin_icon"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
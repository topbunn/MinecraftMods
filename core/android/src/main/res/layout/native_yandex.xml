<com.yandex.mobile.ads.nativeads.NativeAdView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ad_yandex_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_native_card_black"
    android:padding="12dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- MEDIA CARD -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_media"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:cardBackgroundColor="@android:color/transparent"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp"
            app:layout_constraintDimensionRatio="1.7"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.yandex.mobile.ads.nativeads.MediaView
                android:id="@+id/ad_yandex_media"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <!-- Badge -->
            <TextView
                android:id="@+id/ad_yandex_sponsored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|start"
                android:layout_margin="8dp"
                android:background="@drawable/bg_ad_badge"
                android:elevation="4dp"
                android:fontFamily="@font/inter_bold"
                android:paddingHorizontal="6dp"
                android:paddingVertical="2dp"
                android:text="Ad"
                android:textColor="#FFFFFF"
                android:textSize="12sp" />

            <!-- Feedback -->
            <ImageView
                android:id="@+id/ad_yandex_feedback"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="top|end"
                android:layout_margin="8dp"
                android:src="@drawable/ic_feedback"
                android:elevation="4dp"/>

        </androidx.cardview.widget.CardView>

        <!-- TITLE -->
        <TextView
            android:id="@+id/ad_yandex_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="8dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:fontFamily="@font/inter_bold"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@id/cv_media"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/ad_yandex_price"
            tools:text="Mod Title"/>

        <!-- PRICE (добавили обратно) -->
        <TextView
            android:id="@+id/ad_yandex_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/inter_bold"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            app:layout_constraintTop_toTopOf="@id/ad_yandex_title"
            app:layout_constraintBottom_toBottomOf="@id/ad_yandex_title"
            app:layout_constraintEnd_toStartOf="@+id/ad_yandex_cta"
            tools:text="$4.99"/>

        <!-- CTA -->
        <TextView
            android:id="@+id/ad_yandex_cta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_cta"
            android:fontFamily="@font/inter_bold"
            android:paddingHorizontal="12dp"
            android:paddingVertical="6dp"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:text="OPEN"
            app:layout_constraintTop_toTopOf="@id/ad_yandex_title"
            app:layout_constraintBottom_toBottomOf="@id/ad_yandex_title"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- BODY -->
        <TextView
            android:id="@+id/ad_yandex_body"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:maxLines="3"
            android:ellipsize="end"
            android:fontFamily="@font/inter_medium"
            android:textColor="#D4D3D3"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/ad_yandex_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Description text..." />

        <!-- DOMAIN -->
        <TextView
            android:id="@+id/ad_yandex_domain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/inter_regular"
            android:textColor="#8E8E93"
            android:textSize="12sp"
            app:layout_constraintTop_toBottomOf="@id/ad_yandex_body"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="example.com"/>

        <!-- WARNING (обязателен у Яндекса) -->
        <TextView
            android:id="@+id/ad_yandex_warning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/inter_regular"
            android:textColor="#8E8E93"
            android:textSize="12sp"
            app:layout_constraintTop_toBottomOf="@id/ad_yandex_domain"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="Ad warning"/>

        <!-- ICON (обязателен для app ads) -->
        <ImageView
            android:id="@+id/ad_yandex_icon"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:visibility="invisible"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.yandex.mobile.ads.nativeads.NativeAdView>
